{
    "name": "samihsoylu/crunchyroll",
    "description": "Crunchroll RSS Feed episode release tracking",
    "type": "project",
    "autoload": {
        "psr-4": {
            "SamihSoylu\\Crunchyroll\\": "src/",
            "SamihSoylu\\Crunchyroll\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Samih Soylu",
            "email": "mail@samihsoylu.nl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "ext-simplexml": "*",
        "symfony/http-client": "^6.3",
        "nyholm/psr7": "^1.8",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "sentry/sdk": "^3.5",
        "mariosimao/notion-sdk-php": "^1.11",
        "monolog/monolog": "^3.4",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/finder": "^6.3",
        "symfony/console": "^6.3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.16",
        "symfony/var-dumper": "^6.3",
        "mockery/mockery": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.23",
        "phpstan/phpstan": "^1.10"
    }
}
